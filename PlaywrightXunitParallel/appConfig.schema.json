{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/gucu112/TestingFrameworks/refs/heads/playwright-xunit-parallel/PlaywrightXunitParallel/appConfig.schema.json",
  "title": "Application Configuration",
  "description": "A configuration file of PlaywrightXunitParallel project",
  "type": "object",
  "properties": {
    "Environment": {
      "type": "string"
    },
    "RootPath": {
      "type": "string"
    },
    "EntryPoints": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "Name",
          "Url"
        ],
        "properties": {
          "Name": {
            "type": "string"
          },
          "Url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "BrowserName": {
      "type": "string",
      "enum": [
        "chromium",
        "firefox",
        "webkit"
      ]
    },
    "ExpectTimeout": {
      "type": "number",
      "minimum": 0
    },
    "BrowserOptions": {
      "$comment": "https://playwright.dev/dotnet/docs/api/class-browser#browser-new-context",
      "type": "object",
      "properties": {
        "Locale": {
          "type": "string",
          "pattern": "^[a-z]{2}-[A-Z]{2}$"
        },
        "TimezoneId": {
          "type": "string",
          "pattern": "^[a-zA-Z]*\/?[a-zA-Z_]+$"
        },
        "Geolocation": {
          "type": "object",
          "required": [
            "Latitude",
            "Longitude"
          ],
          "properties": {
            "Latitude": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "Longitude": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            },
            "Accuracy": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "Offline": {
          "type": "boolean"
        },
        "Proxy": {
          "$ref": "#/$defs/proxy"
        },
        "RecordVideoDir": {
          "type": "string"
        },
        "RecordVideoSize": {
          "$ref": "#/$defs/screenSize"
        },
        "ScreenSize": {
          "$ref": "#/$defs/screenSize"
        },
        "ViewportSize": {
          "$ref": "#/$defs/screenSize"
        }
      }
    },
    "LaunchOptions": {
      "$comment": "https://playwright.dev/dotnet/docs/api/class-browsertype#browser-type-launch",
      "type": "object",
      "properties": {
        "Channel": {
          "type": "string",
          "enum": [
            "chrome",
            "chrome-beta",
            "chrome-dev",
            "chrome-canary",
            "msedge",
            "msedge-beta",
            "msedge-dev",
            "msedge-canary"
          ]
        },
        "Headless": {
          "type": "boolean"
        },
        "Proxy": {
          "$ref": "#/$defs/proxy"
        },
        "SlowMo": {
          "type": "number",
          "minimum": 0
        },
        "Timeout": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "$defs": {
    "proxy": {
      "type": "object",
      "required": [
        "Server"
      ],
      "properties": {
        "Server": {
          "type": "string"
        },
        "Bypass": {
          "type": "string"
        },
        "Username": {
          "type": "string"
        },
        "Password": {
          "type": "string"
        }
      }
    },
    "screenSize": {
      "type": "object",
      "required": [
        "Width",
        "Height"
      ],
      "properties": {
        "Width": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "Height": {
          "type": "integer",
          "exclusiveMinimum": 0
        }
      }
    }
  }
}
